{
  "name": "playback",
  "version": "0.0.3",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "build": "electron-vite build",
    "build:all": "npm run build && npm run postbuild",
    "build:worker": "tsc --project tsconfig.worker.json",
    "build:ocr": "cd src/services && swift build -c release",
    "copy:assets": "mkdir -p dist/assets && cp -R src/assets/* dist/assets/",
    "copy:swift": "mkdir -p dist/bin && cp src/services/.build/release/OCRServer dist/bin/ && cp src/services/.build/release/Eventlogger dist/bin/",
    "postbuild": "npm run build:ocr && npm run build:worker && npm run copy:swift && npm run copy:assets",
    "rebuild": "electron-rebuild -f -w better-sqlite3 && electron-rebuild -f -w sharp",
    "app": "./release/mac-arm64/Playback.app/Contents/MacOS/Playback",
    "postinstall": "electron-builder install-app-deps",
    "package:mac": "npm run build:all && electron-builder --mac --arm64 --config build.config.js",
    "package:mac:dev": "cross-env ENABLE_NOTARIZE=0 npm run package:mac",
    "package:mac:prod": "cross-env ENABLE_NOTARIZE=1 npm run package:mac",
    "package:dir": "npm run build:all && cross-env NODE_ENV=production electron-builder --dir",
    "publish:mac": "aws s3 cp release/Playback-${npm_package_version}-arm64.dmg s3://playback-updater/updates/ && aws s3 cp release/latest-mac.yml s3://playback-updater/updates/",
    "notarize": "xcrun notarytool submit release/Playback-${npm_package_version}-arm64.dmg --keychain-profile 'playback-creds' --wait"
  },
  "keywords": [],
  "author": "Fabian Weber",
  "license": "ISC",
  "description": "Playback Alpha is a data capture tool for capturing and analyzing user behavior on their desktop.",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@jest/globals": "^29.0.0",
    "@parcel/watcher": "^2.5.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@tailwindcss/cli": "^4.1.4",
    "@tailwindcss/vite": "^4.1.4",
    "@types/aws-sdk": "^0.0.42",
    "@types/better-sqlite3": "^7.6.12",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^2.0.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.3.0",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "postcss": "^8.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "dependencies": {
    "@types/screenshot-desktop": "^1.12.3",
    "amazon-cognito-identity-js": "^6.3.15",
    "async-limiter": "^2.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.8.4",
    "better-sqlite3": "^11.9.1",
    "dotenv": "^16.5.0",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "image-hash": "^5.3.2",
    "pidusage": "^4.0.0",
    "screenshot-desktop": "^1.15.1",
    "undici": "^6.21.2"
  }
}
